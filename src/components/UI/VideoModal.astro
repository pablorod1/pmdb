---
const { videoId } = Astro.props;
---

<div>
  <button
    class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
    id="open-modal"
  >
    Abrir Video
  </button>

  {
    (
      <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
        <div class="bg-white w-11/12 max-w-2xl p-6 rounded shadow-lg">
          <button
            class="absolute top-2 right-2 bg-gray-300 rounded-full p-1 hover:bg-gray-400"
            id="close-modal"
          >
            âœ•
          </button>
          <iframe
            id="video"
            class="w-full aspect-video"
            src={`https://www.youtube.com/embed/${videoId}`}
            title="YouTube video"
            allowfullscreen
          />
        </div>
      </div>
    )
  }
</div>

