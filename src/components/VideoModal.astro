---
import CloseIcon from '../icons/CloseIcon.astro'
---

<div id="video-modal" class="fixed inset-0 bg-black bg-opacity-70 hidden z-10 pb-4">
  <div class="relative flex justify-between items-center p-4 w-full">
    <h2 class="movie-trailer text-2xl font-bold text-center text-white "></h2>
    <button id="close-modal" class="text-gray-600 hover:text-gray-900 bg-white rounded-full p-2"><CloseIcon class="size-8" /></button>
  </div>
  <div class="bg-white p-4 rounded-lg max-w-7xl w-full h-dvh lg:h-full">
    <div class="relative h-full">
      <iframe id="video-frame" class="w-full h-[95dvh] lg:h-full" src="" allowfullscreen></iframe>
    </div>
  </div>
</div>